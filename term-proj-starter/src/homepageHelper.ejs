<!DOCTYPE html>
<html>
  <title>Homepage</title>
  <link rel="stylesheet" type="text/css" href="./homepageHelper.css" />
  <link rel="stylesheet" type="text/css" href="./global.css" />
  <body>
    <div class="logo-container">
      <img src="/instagramLogo" alt="instagram logo" class="logo" />
    </div>
    <div class="main-container">
      <h1>Users</h1>
      <div class="users-container">
        <% users.forEach(user => { %>
        <div class="user-card">
          <div class="profile-image-container">
            <img
              src="/profilePicture/<%= user.username %>/<%= user.profile %>"
              alt="<%= user.username %>'s Profile Picture"
              class="profile-img"
            />
          </div>
          <div class="user-info">
            <a href="/feed?username=<%= user.username %>">
              <input
                type="button"
                class="button username"
                value="<%= user.username %>"
              />
            </a>
            <form
              action="/upload/?username=<%= user.username %>"
              enctype="multipart/form-data"
              method="post"
            >
              <label class="custom-file-upload">
                Choose File
                <input
                  type="file"
                  name="upload"
                  accept="image/*"
                  class="file-input"
                />
              </label>
              <input type="submit" class="button" value="upload" />
            </form>
          </div>
        </div>
        <% }); %>
      </div>
    </div>
  </body>
</html>
